<div class="modal-header bg-primary">
    <label class="fw-bold text-light fs-4"><i class="fas fa-edit me-2"></i>Edit Airline</label>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-0">
    <div class="container rounded position-relative bg-white shadow-sm mt-sm-3 px-0">
        <div class="pt-1 pb-3 px-3" id="new-airline-form">
            <form method="POST" action="/admin/edit/airline=<%= airline._id %>?_method=PUT" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold form-label">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="<%= airline.name %>" value="<%= airline.name %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold form-label">Logo</label>
                        <div class="input-group">
                            <span class="input-group-text"><img src="<%= airline.logo_path %>" width="24" height="24" style="object-fit: cover;"></span>
                            <input type="file" class="form-control" name="logo" accept="image/*">
                        </div>
                    </div>
                </div>
                <label class="fw-bold form-label">Extra Baggage</label>
                <% for(let i = 0; i < airline.extrabaggage.length; i++) { %> 
                <div class="row mb-3 extrabaggage-list">
                    <div class="input-group">
                        <span class="input-group-text">Weight</span>
                        <input type="number" class="form-control extbag-weight" name="extrabaggage[<%= i %>][weight]" value="<%= airline.extrabaggage[i].weight %>" placeholder="kg." min='0' required>
                        <span class="input-group-text">Price</span>
                        <input type="number" class="form-control extbag-price" name="extrabaggage[<%= i %>][price]" value="<%= airline.extrabaggage[i].price %>"  min='0' step="0.01" required>
                        <span class="input-group-text">$</span>
                        <button type="button" class="btn btn-danger del-extbag-btn"><i class="fas fa-times"></i></button>
                    </div>
                </div>
                <% } %>
                <div class="d-flex">
                    <button type="button" class="btn btn-primary" id="add-extbag-btn">Add extra baggage rate</button>
                    <button type="submit" class="btn btn-primary ms-auto">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>