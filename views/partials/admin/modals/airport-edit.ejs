<div class="modal-header bg-primary">
    <label class="fw-bold text-light fs-4"><i class="fas fa-edit me-2"></i>Edit Airport</label>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-0">
    <div class="container-fluid rounded position-relative bg-white shadow-sm mt-sm-3 px-0">
        <div class="pt-1 pb-3 px-3" id="edit-airport-form">
            <form method="POST" action="/admin/edit/airport=<%= airport._id %>?_method=PUT">
                <div class="row mb-3">
                    <div class="col-md-8">
                        <label class="fw-bold form-label">Name</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="airport[name]" placeholder="<%= airport.name %>" value="<%= airport.name %>" required>
                            <input type="text" class="form-control" name="airport[shortname]" placeholder="<%= airport.shortname %>" value="<%= airport.shortname %>" required>
                            <input type="text" class="form-control" name="airport[iata]" placeholder="<%= airport.iata %>" value="<%= airport.iata %>" required>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="fw-bold form-label">City</label>
                        <select class="form-select" name="airport[city]">
                            <option value="<%= airport.city._id %>"><%= airport.city.name %></option>
                            <% cities.forEach(city => { %> 
                                <option value="<%= city._id %>"><%= city.name %></option> 
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
