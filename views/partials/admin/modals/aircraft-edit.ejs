<div class="modal-header bg-primary">
    <label class="fw-bold text-light fs-4"><i class="fas fa-edit me-2"></i>Edit Aircraft</label>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-0">
    <div class="container rounded position-relative bg-white shadow-sm mt-sm-3 px-0">
        <div class="pt-1 pb-3 px-3" id="new-aircraft-form">
            <form method="POST" action="/admin/edit/aircraft=<%= aircraft._id %>?_method=PUT">
                <div class="row mb-3">
                    <div class="col-md">
                        <label class="fw-bold form-label">Model</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="model" placeholder="<%= aircraft.model %>" value="<%= aircraft.model %>" required>
                        </div>
                    </div>
                </div>
                <div class="row mb-3" id="aircraftSeats">
                    <label class="fw-bold form-label">Number of Seats</label>
                    <div class="col-12 mb-3">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0 me-2" id="economy" type="checkbox" <% if(aircraft.seats.economy.number > 0) { %>checked<% } %>>
                                <span>Economy</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Seat number" min="0" <% if(aircraft.seats.economy.number > 0) { %>name="economy[number]" value="<%= aircraft.seats.economy.number %>"<% } else { %>disabled<% } %>>
                            <input type="text" class="form-control" placeholder="Seat layout" <% if(aircraft.seats.economy.number > 0) { %>name="economy[seatlayout]" value="<%= aircraft.seats.economy.seatlayout %>"<% } else { %>disabled<% } %>>
                            <input type="number" class="form-control" placeholder="Seat pitch" min="0" <% if(aircraft.seats.economy.number > 0) { %>name="economy[seatpitch]" value="<%= aircraft.seats.economy.seatpitch %>"<% } else { %>disabled<% } %>>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0 me-2" id="premium" type="checkbox" <% if(aircraft.seats.premium.number > 0) { %>checked<% } %>>
                                <span>Premium</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Seat number" min="0" <% if(aircraft.seats.premium.number > 0) { %>name="premium[number]" value="<%= aircraft.seats.premium.number %>"<% } else { %>disabled<% } %>>
                            <input type="text" class="form-control" placeholder="Aircraft's seatlayout" <% if(aircraft.seats.premium.number > 0) { %>name="premium[seatlayout]" value="<%= aircraft.seats.premium.seatlayout %>"<% } else { %>disabled<% } %>>
                            <input type="number" class="form-control" placeholder="Aircraft's seatpitch" min="0" <% if(aircraft.seats.premium.number > 0) { %>name="premium[seatpitch]" value="<%= aircraft.seats.premium.seatpitch %>"<% } else { %>disabled<% } %>>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0 me-2" id="business" type="checkbox" <% if(aircraft.seats.business.number > 0) { %>checked<% } %>>
                                <span>Bussiness</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Seat number" min="0" <% if(aircraft.seats.business.number > 0) { %>name="business[number]" value="<%= aircraft.seats.business.number %>"<% } else { %>disabled<% } %>>
                            <input type="text" class="form-control" placeholder="Aircraft's seatlayout" <% if(aircraft.seats.business.number > 0) { %>name="business[seatlayout]" value="<%= aircraft.seats.business.seatlayout %>"<% } else { %>disabled<% } %>>
                            <input type="number" class="form-control" placeholder="Aircraft's seatpitch" min="0" <% if(aircraft.seats.business.number > 0) { %>name="business[seatpitch]" value="<%= aircraft.seats.business.seatpitch %>"<% } else { %>disabled<% } %>>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <div class="input-group">
                            <div class="input-group-text">
                                <input class="form-check-input mt-0 me-2" id="first" type="checkbox" <% if(aircraft.seats.first.number > 0) { %>checked<% } %>>
                                <span>First</span>
                            </div>
                            <input type="number" class="form-control" placeholder="Seat number" min="0" <% if(aircraft.seats.first.number > 0) { %>name="first[number]" value="<%= aircraft.seats.first.number %>"<% } else { %>disabled<% } %>>
                            <input type="text" class="form-control" placeholder="Aircraft's seatlayout" <% if(aircraft.seats.first.number > 0) { %>name="first[seatlayout]" value="<%= aircraft.seats.first.seatlayout %>"<% } else { %>disabled<% } %>>
                            <input type="number" class="form-control" placeholder="Aircraft's seatpitch" min="0" <% if(aircraft.seats.first.number > 0) { %>name="first[seatpitch]" value="<%= aircraft.seats.first.seatpitch %>"<% } else { %>disabled<% } %>>
                        </div>
                    </div>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
