<div class="modal-header bg-primary">
    <label class="fw-bold text-light fs-4"><i class="fas fa-edit me-2"></i>Edit City</label>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-0">
    <div class="container rounded position-relative bg-white shadow-sm mt-sm-3 px-0">
        <div class="pt-1 pb-3 px-3" id="new-city-form">
            <form method="POST" action="/admin/edit/city=<%= city._id %>?_method=PUT">
                <div class="row mb-3">
                    <div class="col-md-5">
                        <label class="fw-bold form-label">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="<%= city.name %>" value="<%= city.name %>" required>
                    </div>
                    <div class="col-md-4">
                        <label class="fw-bold form-label">Country</label>
                        <select class="form-select" name="country">
                            <option value="<%= city.country._id %>"><%= city.country.name %></option> 
                            <% countries.forEach(country => { %> 
                                <option value="<%= country._id %>"><%= country.name %></option> 
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="fw-bold form-label">Timezone</label>
                        <div class="input-group">
                            <span class="input-group-text">UTC</span>
                            <input type="number" class="form-control" name="utc" placeholder="Timezone" min='-12' max='12' value="<%= city.UTC %>" required>
                        </div>
                        </select>
                    </div>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>