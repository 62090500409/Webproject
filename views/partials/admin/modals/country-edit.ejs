<div class="modal-header bg-primary">
    <label class="fw-bold text-light fs-4"><i class="fas fa-edit me-2"></i>Edit Country</label>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-0">
    <div class="container-fluid rounded position-relative bg-white shadow-sm mt-sm-3 px-0">
        <div class="pt-1 pb-3 px-3" id="edit-country-form">
            <form method="POST" action="/admin/edit/country=<%= country._id %>?_method=PUT" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-bold form-label">Name and Initial</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="name" placeholder="<%= country.name %>" value="<%= country.name %>" required>
                            <input type="text" class="form-control" name="initial" placeholder="<%= country.initial %>" value="<%= country.initial %>" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold form-label">Flag</label>
                        <div class="input-group">
                            <span class="input-group-text"><img src="<%= country.flag %>" width="24" height="16" style="object-fit: cover;"></span>
                            <input class="form-control" type="file" id="flag-img-file" name="flag" accept="image/*">
                        </div>
                    </div>
                </div>
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>