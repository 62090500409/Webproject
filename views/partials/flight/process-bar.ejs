<div class="mt-5 mb-5" id="flight-process-bar">
    <div class="container-sm px-5">
        <div class="row">
            <div class="progress" style="height: 3px;">
                <% let n = 1; %> 
                <% if(travelType === 'One way') { n = 1 %>
                <% } else if(travelType === 'Round Trip') {  n = 2 %> 
                <% } else if(travelType === 'Multi Cities') { n = multiCities.length } %>
                <div class="progress-bar" style="width: <%= 0*100/n %>%;"></div>
            </div>
            <div class="col position-relative">
                <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-primary rounded-pill process-btn" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-html="true" style="width: 2rem; height:2rem;">0</button>
            </div>
            <% for(let i = 1; i < n; i++) {%> 
                <div class="col position-relative">
                    <button type="button" class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-secondary rounded-pill process-btn" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-html="true"  style="width: 2rem; height:2rem;"><%= i %></button>
                </div>
            <% } %> 
            <div class="col-0 position-relative">
                <button type="button" class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-pill process-btn" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-html="true"  style="width: 2rem; height:2rem;"><i class="fas fa-check"></i></button>
            </div>
        </div>
    </div>
</div>