<div class="modal fade" id="sign-up-modal" tabindex="-1" aria-labelledby="signUpModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title fc-ocean"><i class="fas fa-book-open"></i> Sign up</h4>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="container" id="sign-up-form" novalidate>
                <div class="row mb-2">
                    <div class="col-12">
                        <label class="fw-bold" for="sign-up-email">E-mail</label>
                        <div class="input-group">
                            <input class="form-control" id="sign-up-email" type="email" name="email" placeholder="Your e-mail" required>
                            <div class="invalid-feedback">fill in email</div>
                        </div>
                        <a href="#log-in-modal" data-bs-toggle="modal" data-bs-dismiss="modal">I already have my acount.</a>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-6 mb-2">
                        <label class="fw-bold" for="sign-up-password">Password</label>
                        <div class="input-group has-validation">
                            <button class="btn btn-primary eye-btn px-2 close-eye" type="button"><i class="fas fa-eye-slash"></i></button>
                            <input class="form-control" id="sign-up-password" type="password" name="password" placeholder="Password" required>
                            <div class="invalid-feedback">fill in password</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-bold" for="sign-up-confirm-password">Confirm password</label>
                        <div class="input-group has-validation">
                            <button class="btn btn-primary eye-btn px-2 close-eye" type="button"><i class="fas fa-eye-slash"></i></button>
                            <input class="form-control" id="sign-up-confirm-password" type="password" placeholder="Confirm password" required>
                            <div class="invalid-feedback">fill in confirm password</div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <hr class="my-2">
                    <button type="submit" class="btn btn-primary rounded-pill my-1">Confirm</button>
                    <button class="btn btn-outline-primary rounded-pill" role="button" ><i class="fab fa-google"></i> Sign up by g-mail</button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div> 